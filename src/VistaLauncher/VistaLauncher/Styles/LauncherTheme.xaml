<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 启动器主题色 -->
    <Color x:Key="LauncherBackgroundColor">#2D2D30</Color>
    <Color x:Key="LauncherSurfaceColor">#3D3D42</Color>
    <Color x:Key="LauncherBorderColor">#454545</Color>
    <Color x:Key="LauncherTextColor">#FFFFFF</Color>
    <Color x:Key="LauncherSecondaryTextColor">#A0A0A0</Color>
    <Color x:Key="LauncherAccentColor">#0078D4</Color>
    <Color x:Key="LauncherHoverColor">#404045</Color>
    <Color x:Key="LauncherSelectedColor">#4A4A50</Color>

    <SolidColorBrush x:Key="LauncherBackgroundBrush" Color="{StaticResource LauncherBackgroundColor}"/>
    <SolidColorBrush x:Key="LauncherSurfaceBrush" Color="{StaticResource LauncherSurfaceColor}"/>
    <SolidColorBrush x:Key="LauncherBorderBrush" Color="{StaticResource LauncherBorderColor}"/>
    <SolidColorBrush x:Key="LauncherTextBrush" Color="{StaticResource LauncherTextColor}"/>
    <SolidColorBrush x:Key="LauncherSecondaryTextBrush" Color="{StaticResource LauncherSecondaryTextColor}"/>
    <SolidColorBrush x:Key="LauncherAccentBrush" Color="{StaticResource LauncherAccentColor}"/>
    <SolidColorBrush x:Key="LauncherHoverBrush" Color="{StaticResource LauncherHoverColor}"/>
    <SolidColorBrush x:Key="LauncherSelectedBrush" Color="{StaticResource LauncherSelectedColor}"/>

    <!-- 搜索框样式 -->
    <Style x:Key="LauncherSearchBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource LauncherTextBrush}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Padding" Value="4,8"/>
        <Setter Property="PlaceholderForeground" Value="{StaticResource LauncherSecondaryTextBrush}"/>
        <Setter Property="SelectionHighlightColor" Value="{StaticResource LauncherAccentBrush}"/>
    </Style>

    <!-- 列表项容器样式 -->
    <Style x:Key="LauncherListItemStyle" TargetType="ListViewItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="MinHeight" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

</ResourceDictionary>
