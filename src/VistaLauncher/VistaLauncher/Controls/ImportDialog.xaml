<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="VistaLauncher.Controls.ImportDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="导入 NirLauncher 工具集"
    PrimaryButtonText="导入"
    CloseButtonText="取消">

    <StackPanel Spacing="16">
        <TextBlock Text="NirLauncher 目录" Style="{StaticResource BodyStrongTextBlockStyle}"/>
        <TextBox x:Name="PathTextBox" PlaceholderText="选择 NirLauncher 目录..."/>
        <Button x:Name="BrowseButton" Content="浏览..." Click="BrowseButton_Click"/>
    </StackPanel>
</ContentDialog>
